@page "/forgot-password"
@layout LoginLayout
@using Directory.Infrastructure.Identity
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject IUserService UserService
@inject IEmailService EmailService

<PageTitle>Forgot Password - CGBC Directory</PageTitle>

<div class="card shadow">
    <div class="card-body p-4">
        <h4 class="card-title text-center mb-4">Reset Password</h4>

        @if (submitted)
        {
            <div class="alert alert-info">
                If an account exists with that email address, a password reset email has been sent.
                Please check your email.
            </div>
            <div class="text-center">
                <a href="/login" class="btn btn-primary">Return to Login</a>
            </div>
        }
        else
        {
            <EditForm Model="model" OnValidSubmit="HandleSubmit" FormName="forgotPassword">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <InputText class="form-control" @bind-Value="model.Email" />
                    <ValidationMessage For="() => model.Email" />
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                    <a href="/login" class="btn btn-secondary">Cancel</a>
                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private ForgotPasswordModel? model { get; set; }

    private bool submitted;

    protected override void OnInitialized() => model ??= new();

    private async Task HandleSubmit()
    {
        if (model == null) return;
        var user = await UserManager.FindByEmailAsync(model.Email);
        if (user != null)
        {
            var (success, tempPassword, _) = await UserService.ResetPasswordAsync(user.Id);
            if (success)
            {
                try
                {
                    await EmailService.SendPasswordResetEmailAsync(model.Email, tempPassword);
                }
                catch
                {
                    // Silently fail - don't reveal whether account exists
                }
            }
        }

        // Always show success message regardless of whether account exists
        submitted = true;
    }

    private sealed class ForgotPasswordModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required.")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email format.")]
        public string Email { get; set; } = string.Empty;
    }
}
